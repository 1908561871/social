<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000000"
  >
    <TextView
        android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转"/>
    <zwb.cn.view.matchview.MatchTextView
        android:id="@+id/mMatchTextView"
        android:layout_centerInParent="true"
        match:matchViewText="wo jiao zhang wei bo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
<zwb.cn.view.ProgressLayout
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    match:progressLayoutProgress="true"
    ></zwb.cn.view.ProgressLayout>
</LinearLayout>
